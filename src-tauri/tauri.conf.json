{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Crosshair Studio",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": true
      },
      "fs": {
        "all": true
      },
      "path": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      }
    },
    "windows": [
      {
        "transparent": true,
        "decorations": false,
        "hiddenTitle": true,
        "title": "Crosshair Studio",
        "resizable": false,
        "center": true,
        "width": 400,
        "height": 400
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.crosshair-studio.app",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
      "copyright": "Copyright Â© 2024 Crosshair Studio",
      "publisher": "Evanpatchouli"
    }
  }
}
