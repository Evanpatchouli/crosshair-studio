{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Crosshair Studio",
    "version": "2.0.0-alpha"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "os": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": true
      },
      "fs": {
        "all": true
      },
      "path": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      },
      "process": {
        "all": false,
        "exit": true,
        "relaunch": true,
        "relaunchDangerousAllowSymlinkMacos": false
      }
    },
    "windows": [
      {
        "label": "main",
        "transparent": true,
        "decorations": false,
        "hiddenTitle": true,
        "title": "Crosshair Studio",
        "resizable": false,
        "center": true,
        "width": 400,
        "height": 400,
        "url": "main.html"
      },
      {
        "label": "monitor",
        "visible": false,
        "transparent": true,
        "decorations": true,
        "hiddenTitle": false,
        "title": "Monitor",
        "resizable": true,
        "center": true,
        "width": 1200,
        "height": 800,
        "url": "monitor.html"
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.crosshair-studio.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "copyright": "Copyright Â© 2024 Crosshair Studio",
      "publisher": "Evanpatchouli",
      "category": "Game",
      "shortDescription": "Crosshair Studio",
      "resources": [
        "icons",
        "crosshairs/**/*",
        "LICENSE",
        "readme.md",
        "readme_cn.md"
      ]
    }
  }
}